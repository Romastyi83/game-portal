.swiper
  width 100%
  padding 0 32px 12px
  +mq(0, 767px)
    padding-right 0
    padding-left 0
.swiper-button-next
  width 34px
  height 34px
  background #fff
  border-radius 50%
  box-shadow 0px 4px 4px rgba(0, 0, 0, 0.05)
  right -18px
  &:after
    display none
  img
    user-select none
.swiper-button-prev
  width 34px
  height 34px
  background #fff
  border-radius 50%
  box-shadow 0px 4px 4px rgba(0, 0, 0, 0.05)
  left -18px
  &:after
    display none
  img
    user-select none
.top-swiper
  position relative
.swiper-pagination
  display flex
  flex-direction column
  gap 6px
.swiper-horizontal>.swiper-pagination-bullets, .swiper-pagination-bullets.swiper-pagination-horizontal
  width 23px
  bottom 48px
  left calc(50% - 588px)
  +mq(0, 1365px)
    left calc(50% - 365px)
  +mq(0, 767px)
    bottom calc(50% - 36px)
    left 14px
.swiper-pagination-bullet
  width 15px
  height 15px
  border 1px solid #fff
  background-color transparent
  opacity 1
.swiper-pagination-bullet-active
  background-color #fff