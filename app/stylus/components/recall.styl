.recall
  +element(item)
    width 337px
    background-color #fff
    box-shadow 0px 6px 8px rgba(78, 166, 253, 0.25)
    border-radius 4px
    padding 15px 15px 20px
  +element(top)
    display flex
    margin-bottom 15px
  +element(heading)
    display flex
    flex-direction column
    align-items flex-start
    justify-content center
  +element(photo)
    margin-right 17px
  +element(name)
    font-weight 700
    font-size 22px
    letter-spacing -0.05em
    color #3D3D3D
    margin-bottom 5px
  +element(date)
    min-width 148px
    height 27px
    background #E2F1FF
    border-radius 3px
    display flex
    justify-content center
    align-items center
    font-weight 400
    font-size 13px
    letter-spacing -0.05em
    color #000
    padding 0 8px
  +element(text)
    font-weight 300
    font-size 14px
    line-height 1.4
    color #000
  +element(holder)
    position relative