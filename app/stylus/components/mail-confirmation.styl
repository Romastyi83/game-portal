.mail-confirmation
  +element(title)
    font-family 'Acrom', sans-serif
    font-style normal
    font-weight 800
    font-size 64px
    line-height 77px
    text-align center
    letter-spacing -0.08em
    color #000
    +mq(0, 767px)
      font-size 38px
      line-height 38px
  +element(logo-holder)
    display flex
    justify-content center
    align-items center
    padding-top 69px
    margin-bottom 43px
    +mq(0, 767px)
      padding-top 25px
      margin-bottom 25px
  +element(logo)
    +mq(0, 767px)
      max-width 170px
  +element(sep)
    max-width 966px
    height 3px
    background-color #D9D9D9
    border-radius 39px
    margin 41px auto 0
    +mq(0, 767px)
      margin-top 25px
  +element(p)
    max-width 767px
    font-family 'Inter', sans-serif
    font-weight 400
    font-size 20px
    line-height 24px
    text-align center
    color #000
    margin 45px auto 0
    +mq(0, 767px)
      font-size 14px
      line-height 17px
      margin-top 25px
  +element(btn-holder)
    margin 43px auto 0
    width 572px
    max-width 100%
    +mq(0, 767px)
      margin-top 25px
  +element(btn)
    width 100%
    max-width 100%
    height 88px
    font-family 'Inter', sans-serif
    font-weight 800
    font-size 20px
    text-align center
    color #000
    line-height 88px
    background-color #FEC004
    border-radius 9px
    outline none
    border none
    cursor pointer
    padding 0 15px
    +mq(0, 767px)
      height 70px
      line-height 70px
  +element(unsubscribe)
    font-family 'Inter', sans-serif
    font-weight 400
    font-size 20px
    line-height 24px
    text-decoration-line underline
    color #000
    +mq(0, 767px)
      font-size 14px
      line-height 14px
  +element(unsubscribe-holder)
    display flex
    justify-content center
    align-items center
    margin-top 41px
    +mq(0, 767px)
      margin-top 25px
  +element(footer)
    padding-bottom 132px
    margin-top 50px
    +mq(0, 767px)
      padding-bottom 30px
  +element(wrapper)
    min-height 100vh
    display flex
    flex-direction column
    justify-content space-between
  +element(link)
    text-decoration underline