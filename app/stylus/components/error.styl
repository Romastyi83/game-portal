.error
  display none
  width 530px
  max-width 100%
  position absolute
  top 0
  right 0
  background-image linear-gradient(180deg, #490000 0%, #920000 100%)
  border 1px dashed #EA4141
  box-shadow 0px 0px 25px rgba(0, 0, 0, 0.63)
  padding 18px 25px
  z-index 99
  &.active
    display block
  +mq(0, 767px)
    padding 10px
  +element(title)
    font-family 'Inter', sans-serif
    font-weight 800
    font-size 18px
    line-height 22px
    letter-spacing -0.05em
    text-transform uppercase
    color #fff
    margin-bottom 10px
    +mq(0, 767px)
      font-size 16px
      margin-bottom 5px
  +element(text)
    font-family 'Inter', sans-serif
    font-weight 400
    font-size 14px
    line-height 1
    letter-spacing -0.05em
    color #fff
  +element(close)
    position absolute
    top 12px
    right 15px
    cursor pointer